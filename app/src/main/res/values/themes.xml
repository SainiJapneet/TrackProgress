<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TrackProgress" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/gradient_background_secondary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CenteredSpinnerItem" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:gravity">center</item>
    </style>

    <style name="Theme.TrackProgress" parent="Base.Theme.TrackProgress" />
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:statusBarColor">@color/button_background</item>
    </style>

    <style name="FullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>